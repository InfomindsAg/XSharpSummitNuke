{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$ref": "#/definitions/build",
  "title": "Build Schema",
  "definitions": {
    "build": {
      "type": "object",
      "properties": {
        "BuildLogDirectory": {
          "type": "string",
          "description": "Directory for extra output like buildlogs, "
        },
        "CodeAnalysisDirectory": {
          "type": "string",
          "description": "Directory for code analysis output"
        },
        "Configuration": {
          "type": "string",
          "description": "Configuration to build - Default is 'Debug' (local) or 'Release' (server)",
          "enum": [
            "Debug",
            "Release"
          ]
        },
        "Continue": {
          "type": "boolean",
          "description": "Indicates to continue a previously failed build attempt"
        },
        "Help": {
          "type": "boolean",
          "description": "Shows the help text for this build assembly"
        },
        "Host": {
          "type": "string",
          "description": "Host for execution. Default is 'automatic'",
          "enum": [
            "AppVeyor",
            "AzurePipelines",
            "Bamboo",
            "Bitbucket",
            "Bitrise",
            "GitHubActions",
            "GitLab",
            "Jenkins",
            "Rider",
            "SpaceAutomation",
            "TeamCity",
            "Terminal",
            "TravisCI",
            "VisualStudio",
            "VSCode"
          ]
        },
        "NoLogo": {
          "type": "boolean",
          "description": "Disables displaying the NUKE logo"
        },
        "Partition": {
          "type": "string",
          "description": "Partition to use on CI"
        },
        "Plan": {
          "type": "boolean",
          "description": "Shows the execution plan (HTML)"
        },
        "Profile": {
          "type": "array",
          "description": "Defines the profiles to load",
          "items": {
            "type": "string"
          }
        },
        "PublishDirectory": {
          "type": "string",
          "description": "Directory for publish output and logs"
        },
        "PublishExtraDirectory": {
          "type": "string",
          "description": "Directory for extra output like changelogs, "
        },
        "Root": {
          "type": "string",
          "description": "Root directory during build execution"
        },
        "Skip": {
          "type": "array",
          "description": "List of targets to be skipped. Empty list skips all dependencies",
          "items": {
            "type": "string",
            "enum": [
              "ChangeLog",
              "Clean",
              "CodeAnalysis",
              "Compile",
              "CompileAndTest",
              "GetAssets",
              "Publish",
              "ReCompile",
              "Restore",
              "Test"
            ]
          }
        },
        "Solution": {
          "type": "string",
          "description": "Path to a solution file that is automatically loaded"
        },
        "SourceDirectory": {
          "type": "string",
          "description": "Directory for sourcecode"
        },
        "Target": {
          "type": "array",
          "description": "List of targets to be invoked. Default is '{default_target}'",
          "items": {
            "type": "string",
            "enum": [
              "ChangeLog",
              "Clean",
              "CodeAnalysis",
              "Compile",
              "CompileAndTest",
              "GetAssets",
              "Publish",
              "ReCompile",
              "Restore",
              "Test"
            ]
          }
        },
        "TestNetFrameWork": {
          "type": "string",
          "description": "Specify the .NET Framework for the execution of the unit-tests. default: net472"
        },
        "TestVerbosity": {
          "type": "string",
          "description": "Specify the verbosity for the execution of the unit-tests. Allowed values Quiet, Minimal, Normal, Detailed, Diagnostic",
          "enum": [
            "Detailed",
            "Diagnostic",
            "Minimal",
            "Normal",
            "Quiet"
          ]
        },
        "Verbosity": {
          "type": "string",
          "description": "Logging verbosity during build execution. Default is 'Normal'",
          "enum": [
            "Minimal",
            "Normal",
            "Quiet",
            "Verbose"
          ]
        }
      }
    }
  }
}
